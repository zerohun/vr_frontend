<a-scene>
  <a-assets>
    <img id='menu-box' src='<%= asset_path 'menu-box.png' %>'>
  </a-assets>

  <a-sky color="#ECECEC"></a-sky>
  <a-entity light="color: #EBECFF; intensity: 0.7" position="-10 5 10"></a-entity>
  <a-entity light="color: white; intensity: 0.9" position="10 5 -10"></a-entity>
  <a-entity light="color: #FFFFDE; intensity: 0.5" position="10 5 10"></a-entity>
  <a-entity light="color: #FFFAFA; intensity: 0.3" position="-10 5 -10"></a-entity>
